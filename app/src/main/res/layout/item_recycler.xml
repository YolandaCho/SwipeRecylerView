<?xml version="1.0" encoding="utf-8"?>
<com.example.yolanda.swiperecylerview.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/fog">

        <TextView
            android:id="@+id/bmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shenzhen"
            android:gravity="center"
            android:textSize="26sp"
            android:textColor="@color/color_ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content"
            android:src="@drawable/button_delete"/>
    </LinearLayout>

</com.example.yolanda.swiperecylerview.SwipeItemLayout>